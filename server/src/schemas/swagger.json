{
  "openapi": "3.1.0",
  "info": {
    "title": "API LootBox",
    "version": "1.0.0",
    "description": "API магазина",
    "contact": {
      "Elbrus Bootcamp": "Эльбрус Буткемп",
      "url": "https://github.com/Elbrus-Bootcamp"
    }
  },
  "servers": [
    { "url": "http://localhost:3000/api", "description": "Локально работающий сервер" }
  ],
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fullname": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "cost": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "NewOrderForm": {
        "type": "object",
        "properties": {
          "fullname": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "cost": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "ServerError": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    { "name": "Orders", "description": "Заказы" },
    { "name": "products", "description": "Товары" }
  ],
  "paths": {
    "/orders": {
      "description": "Получение и создание заказов",
      "get": {
        "tags": ["Orders"],
        "description": "Получение всех заказов",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerError"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Orders"],
        "description": "Создание нового заказа",
        "requestBody": {
          "description": "Создание нового заказа",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewOrderForm"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешное создание заказа",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Order"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerError"
                }
              }
            }
          }
        }
      }
    },
    "/products/{id}": {
      "description": "Получение конкретного товара",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID товара",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int32"
          }
        }
      ],
      "get": {
        "tags": ["products"],
        "description": "Получение конкретного товара",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerError"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "description": "Получение всех товаров",
      "get": {
        "tags": ["products"],
        "description": "Получение всех товаров",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ошибка сервера",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ServerError"
                }
              }
            }
          }
        }
      }
    }
  }
}
